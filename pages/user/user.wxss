/* pages/user/user.wxss */
.container {
  display: flex;
  flex-direction: column;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 用户头像信息区域 */
.user-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20px 15px;
  background-color: #ffffff;
  margin-bottom: 10px;
}

.user-info {
  display: flex;
  align-items: center;
}

.avatar {
  width: 60px;
  height: 60px;
  border-radius: 50%;
  margin-right: 10px;
  background-color: #f0f0f0;
  border: 1px solid #eee;
}

.name-info {
  display: flex;
  flex-direction: column;
}

.nickname {
  font-size: 18px;
  font-weight: bold;
  margin-bottom: 5px;
}

.account-info {
  display: flex;
  align-items: center;
}

.account-text {
  font-size: 12px;
  color: #999;
}

.copy-icon {
  font-size: 12px;
  color: #999;
  margin-left: 5px;
}

.settings-icon {
  width: 20px;
  height: 20px;
}

/* 功能导航区 */
.nav-box {
  background-color: #ffffff;
  padding: 15px;
  margin-bottom: 10px;
  border-radius: 8px;
}

.nav-row {
  display: flex;
  justify-content: space-around;
}

.nav-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.icon-box {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  background-color: #f5f5f5;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 8px;
}

.iconfont {
  font-size: 20px;
}

.nav-text {
  font-size: 12px;
  color: #333;
}

/* 我的订单区域 */
.order-box {
  background-color: #ffffff;
  padding: 15px;
  margin-bottom: 10px;
  border-radius: 8px;
}

.order-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15px;
}

.title {
  font-size: 16px;
  font-weight: bold;
}

.view-all {
  display: flex;
  align-items: center;
}

.view-all-text {
  font-size: 12px;
  color: #999;
}

.arrow {
  font-size: 12px;
  color: #999;
  margin-left: 5px;
}

.order-nav {
  display: flex;
  justify-content: space-between;
  padding-bottom: 15px;
  border-bottom: 1px solid #eee;
}

.order-nav-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
}

.badge {
  position: absolute;
  top: -5px;
  right: -5px;
  background-color: #ff6600;
  color: white;
  font-size: 10px;
  min-width: 15px;
  height: 15px;
  text-align: center;
  line-height: 15px;
  border-radius: 15px;
}

/* 最近订单信息 */
.recent-order {
  padding-top: 15px;
}

.order-status {
  display: flex;
  justify-content: space-between;
  margin-bottom: 5px;
  font-size: 14px;
}

.order-time {
  color: #999;
}

.order-detail {
  font-size: 12px;
  color: #666;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* 我的工具区域 */
.tools-box {
  background-color: #ffffff;
  padding: 15px;
  margin-bottom: 10px;
  border-radius: 8px;
}

.section-header {
  margin-bottom: 15px;
}

.section-header text {
  font-size: 16px;
  font-weight: bold;
}

.tools-nav {
  display: flex;
}

.tool-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-right: 30px;
}

.icon-box.orange {
  background-color: #fff2e8;
  color: #ff6600;
}

.icon-box.blue {
  background-color: #e8f5ff;
  color: #0099ff;
}

.icon-box.red {
  background-color: #ffebee;
  color: #ff4d4f;
}

.tool-text {
  font-size: 12px;
  color: #333;
  margin-top: 8px;
}

/* 猜你喜欢区域 */
.guess-like {
  background-color: #ffffff;
  padding: 15px;
  margin-bottom: 10px;
}

.like-header {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 15px;
}

.like-text {
  font-size: 14px;
  font-weight: bold;
  margin: 0 10px;
}

.like-title {
  color: #ddd;
}

.like-products {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.product-item {
  width: 48%;
  margin-bottom: 15px;
}

.product-image {
  width: 100%;
  height: 120px;
  border-radius: 8px;
  margin-bottom: 5px;
}

.product-name {
  font-size: 14px;
  margin-bottom: 5px;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.product-price {
  font-size: 16px;
  color: #ff6600;
  font-weight: bold;
  margin-bottom: 2px;
}

.product-sold {
  font-size: 12px;
  color: #999;
}