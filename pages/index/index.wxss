Page {
  background-color: #f4f4f4;
}

/* title */
.title {
  width: 750rpx;
  height: 108rpx;
  border-bottom: solid 1px #333333;
  display: flex;
  justify-content: space-evenly;
  align-items: center;
}

.title>.logo {
  width: 150rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
}

.title>.logo>image {
  width: 100%;
}

.title>.search {
  width: 450rpx;
  height: 80rpx;
  border: solid 2px #ff5500;
  border-radius: 69rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 5rpx;
}

.title>.search>text {
  margin-left: 30rpx;
}

.title>.search>.search_button {
  width: 150rpx;
  height: 75rpx;
  border-radius: 60rpx;
  text-align: center;
  line-height: 75rpx;
  color: white;
  background: linear-gradient(to right, #FF8D0E, #FF5000);
}

.title>.markcard {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
}

.title>.markcard>image {
  width: 100%;
}

/* nav */
.nav{
  width: 720rpx;
  height: fit-content;
  overflow: hidden;
  border-radius: 10rpx;
  background-color: #ffffff;
  margin: 10rpx auto;
}
scroll-view{
  width: inherit;
  height: inherit;
  white-space: nowrap;
}

.item_container{
  width: 150rpx;
  height: inherit;
  display: inline-block;
  text-align: center;
}

.item{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.item > image{
  width: 80%;
}

/* card */
.card_container{
  max-width: 720rpx;
  display: flex;
  width: 720rpx;
 margin: 0 auto;
  flex-wrap: wrap;
  margin: 0 auto;
  justify-content: space-between;
}

.card{
  /* display: inline-block; */
  max-width: 350rpx;
  width: 350rpx;
  /* max-height: fit-content; */
  background-color: #ffffff;
  border-radius: 10rpx;
  font-size: 14px;
  color: #333333;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  border-radius: 16rpx;
  overflow: hidden;
  margin-bottom: 10rpx;
  /* height: fit-content; */
}

.card > image{
  width: 100%;
}

.card > .info{
  margin: 5rpx;
  height: 75rpx;
  overflow-y: hidden;
}

.card > .price{
  width: 100%;
  /* height: 100rpx; */
  color: red;
  
}

.price > .p, .price > .b{
  display: inline-block;
  margin: 5rpx;
}

.price > .b{
  font-size: small;
  color: #999999;
}
