/* pages/shopcar/shopcar.wxss */
.container {
  display: flex;
  flex-direction: column;
  height: 100%;
  background-color: #f5f5f5;
}

.header, .total-items, .cart-items, .checkout-bar{
  width: 700rpx;
}

/* 顶部导航栏 */
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 15px;
  background-color: #ff6600;
  color: #fff;
}

.header .title {
  font-size: 18px;
  font-weight: bold;
}

.header .manage {
  font-size: 14px;
}

/* 商品总数 */
.total-items {
  padding: 10px 15px;
  background-color: #fff;
  font-size: 12px;
  color: #999;
  border-bottom: 1px solid #eee;
}

/* 购物车商品列表 */
.cart-items {
  flex: 1;
  overflow-y: auto;
}

.cart-item {
  background-color: #fff;
  margin-bottom: 10px;
  padding: 10px 15px;
  border-radius: 8px;
}

.checkbox {
  transform: scale(0.8);
}

/* 商家信息 */
.shop-info {
  display: flex;
  align-items: center;
  margin: 10px 0;
}

.shop-icon {
  width: 16px;
  height: 16px;
  margin-right: 5px;
}

.shop-name {
  font-size: 14px;
  flex: 1;
}

.shop-arrow {
  color: #999;
  font-size: 14px;
}

/* 商品信息 */
.product-info {
  display: flex;
  padding: 10px 0;
}

.product-image {
  width: 80px;
  height: 80px;
  margin-right: 10px;
  border-radius: 4px;
}

.product-details {
  flex: 1;
}

.product-title {
  font-size: 14px;
  line-height: 1.4;
  margin-bottom: 5px;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
}

.product-specs {
  font-size: 12px;
  color: #999;
  padding: 3px 0;
  background-color: #f7f7f7;
  margin-bottom: 10px;
  border-radius: 4px;
  padding-left: 5px;
}

.price-quantity {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.price {
  font-size: 16px;
  color: #ff6600;
  font-weight: bold;
}

.quantity-control {
  display: flex;
  align-items: center;
  border: 1px solid #eee;
  border-radius: 4px;
}

.minus, .plus {
  width: 28px;
  height: 28px;
  line-height: 28px;
  text-align: center;
  font-size: 16px;
  background-color: #f5f5f5;
}

.quantity {
  width: 40px;
  height: 28px;
  line-height: 28px;
  text-align: center;
  border-left: 1px solid #eee;
  border-right: 1px solid #eee;
  font-size: 14px;
}

/* 优惠券 */
.coupon {
  background-color: #fff7ef;
  padding: 5px 10px;
  border-radius: 4px;
  margin-top: 10px;
}

.coupon-text {
  font-size: 12px;
  color: #ff6600;
}

/* 底部结算栏 */
.checkout-bar {
  display: flex;
  align-items: center;
  height: 50px;
  background-color: #fff;
  border-top: 1px solid #eee;
  padding: 0 15px;
}

.select-all {
  display: flex;
  align-items: center;
  font-size: 14px;
  margin-right: 15px;
}

.total {
  flex: 1;
  font-size: 14px;
}

.total-price {
  color: #ff6600;
  font-weight: bold;
  font-size: 16px;
}

.checkout-btn {
  background-color: #ccc;
  color: #fff;
  padding: 8px 20px;
  border-radius: 20px;
  font-size: 14px;
}

.checkout-btn.active {
  background-color: #ff6600;
}

/* 底部导航 */
.tab-bar {
  display: flex;
  height: 50px;
  background-color: #fff;
  border-top: 1px solid #eee;
}

.tab-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.tab-item image {
  width: 24px;
  height: 24px;
}

.tab-item text {
  font-size: 12px;
  margin-top: 2px;
  color: #666;
}

.tab-item.active text {
  color: #ff6600;
}